@model List<Bio>
@{
    List<Language> languages = ViewBag.Languages;
}
<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">@language.Getkey("UpdateBio")</div>
                <hr>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model[0].PhoneNumber">@language.Getkey("PhoneNumber")</label>
                        <input asp-for="@Model[0].PhoneNumber" class="form-control">
                        <span asp-validation-for="@Model[0].PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[0].Email">@language.Getkey("Email")</label>
                        <input asp-for="@Model[0].Email" class="form-control">
                        <span asp-validation-for="@Model[0].Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[0].Facebook">Facebook</label>
                        <input asp-for="@Model[0].Facebook" class="form-control">
                        <span asp-validation-for="@Model[0].Facebook" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[0].Instagram">Instagram</label>
                        <input asp-for="@Model[0].Instagram" class="form-control">
                        <span asp-validation-for="@Model[0].Instagram" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[0].Linkedin">Linkedin</label>
                        <input asp-for="@Model[0].Linkedin" class="form-control">
                        <span asp-validation-for="@Model[0].Linkedin" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[0].Twitter">Twitter</label>
                        <input asp-for="@Model[0].Twitter" class="form-control">
                        <span asp-validation-for="@Model[0].Twitter" class="text-danger"></span>
                    </div>
                    @if (languages != null && languages.Count() > 0)
                    {
                        @for (int i = 0; i < languages.Count(); i++)
                        {
                            <span>@languages[i].Name</span>
                            <div class="form-group">
                                <label asp-for="@Model[i].Address">@language.Getkey("Address")</label>
                                <textarea asp-for="@Model[i].Address" class="form-control editor"></textarea>
                                <span asp-validation-for="@Model[i].Address" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="@Model[i].LanguageId" value="@languages[i].Id">
                        }
                    }
                    <div class="form-group">
                        <label asp-for="@Model[0].MapLink">@language.Getkey("Map")</label>
                        <input asp-for="@Model[0].MapLink" class="form-control">
                        <span asp-validation-for="@Model[0].MapLink" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary px-5">@language.Getkey("Submit")</button>
                        <a asp-action="Index" class="btn btn-secondary">@language.Getkey("Cancel")</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
