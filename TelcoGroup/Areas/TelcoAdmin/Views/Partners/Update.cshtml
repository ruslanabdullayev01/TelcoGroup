@model Partner

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">@language.Getkey("UpdatePartner")</div>
                <hr>
                <div style="margin:5px">
                    <img style="width:150px; height:100px;object-fit:contain;" src="~/src/images/partners/@Model.ImagePath">
                </div>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.Photo">@language.Getkey("Image")</label>
                        <input accept="image/*" asp-for="@Model.Photo" class="form-control">
                        <span asp-validation-for="@Model.Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Link">@language.Getkey("Link")</label>
                        <input asp-for="@Model.Link" class="form-control">
                        <span asp-validation-for="@Model.Link" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary px-5">@language.Getkey("Submit")</button>
                        <a asp-action="Index" class="btn btn-secondary">@language.Getkey("Cancel")</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
