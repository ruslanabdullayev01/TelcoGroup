@inject LayoutService layoutService
@{
    string currentCulture = await layoutService.GetCurrentLangauge();
    Service? firstService = ViewBag.FirstService;
}


<header>
    <div class="logo">
        <a asp-controller="Home" asp-action="Index" class="">
            <img class="first" src="~/src/images/logo.png" alt="">
            <img class="second" src="~/src/images/logo2.png" alt="">
        </a>
    </div>
    <div class="menu">
        <div class="text">
            <a asp-controller="Home" asp-action="Index">@language.Getkey("Home")</a>
        </div>
        <div class="text">
            @if (firstService != null)
            {
                <a asp-controller="Services" asp-action="Index" asp-route-id="@firstService.Id">@language.Getkey("Services")</a>
            }
            else{
                <a style="cursor:pointer;">@language.Getkey("Services")</a>
            }
            
        </div>
        <div class="text">
            <a asp-controller="Partners" asp-action="Index">@language.Getkey("Partners")</a>
        </div>
        <div class="text">
            <a asp-controller="AboutUs" asp-action="Index">@language.Getkey("AboutUs")</a>
        </div>
        <div class="text">
            <a asp-controller="ContactUs" asp-action="Index">@language.Getkey("ContactUs")</a>
        </div>
        <div class="language">
            @if (currentCulture == "en-US")
            {
                <div class="lang" style="cursor:pointer; pointer-events: none">
                    <a class="selectedLang" href="javascript:void(0);" style="cursor:pointer; pointer-events: none">EN</a>
                </div>
                <div class="langoptions">
                    <a class="lang" asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="az-Latn-AZ">AZ</a>
                </div>
            }
            else
            {
                <div class="lang" style="cursor:pointer; pointer-events: none">
                    <a class="selectedLang" href="javascript:void(0);" style="cursor:pointer; pointer-events: none">AZ</a>
                </div>
                <div class="langoptions">
                    <a class="lang" asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US">EN</a>
                </div>
            }
        </div>
    </div>
</header>