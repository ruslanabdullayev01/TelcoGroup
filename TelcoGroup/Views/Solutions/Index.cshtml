@model List<Solution>
@{
    bool isReversed = false;
    @inject LayoutService layoutService
    string currentCulture = await layoutService.GetCurrentLangauge();
    IEnumerable<Setting>? settings = await layoutService.GetSettings();
    Header header = ViewBag.Header;


}
<section id="Intro">
   @*  <h1>@language.Getkey("SOLUTIONSS")</h1>
    <h2>@language.Getkey("SolvingComplexityDeliveringSimplicity")</h2> *@
    <h1>@Html.Raw(header.BlueText)</h1>
    <h2>@Html.Raw(header.GreenText)</h2>
</section>

<section id="SolutionGroups">
    <div class="intro">
        @Html.Raw(settings.FirstOrDefault(s => s.Key == "SolutionsPageDescription" && s.Language?.Culture == currentCulture)?.Value)
    </div>

    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            @if (isReversed)
            {
                <div class="solutionCard solutionSecondCard">
                    <div class="solutionText">
                        <h1 class="title secondTitle">@item.Title</h1>
                        <div class="subtitle secondSubtitle">
                            @Html.Raw(item.Description)
                        </div>
                    </div>
                    <div class="rectangle nonReversed"></div>
                </div>
            }
            else
            {
                <div class="solutionCard reversed">
                    <div class="solutionText">
                        <h1 class="title">@item.Title</h1>
                        <div class="subtitle">
                            @Html.Raw(item.Description)
                        </div>
                    </div>
                    <div class="rectangle"></div>
                </div>
            }

            isReversed = !isReversed;
        }
    }
</section>